# Gold Trading AI - Environment Variables Template
# ================================================
# Copy this file to .env and fill in your values
# Never commit the actual .env file to version control

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application secret key (generate a secure random string)
SECRET_KEY=your-secret-key-here

# ============================================================================
# API KEYS AND CREDENTIALS
# ============================================================================

# Alpha Vantage API Key
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl API Key
# Get your free key at: https://www.quandl.com/tools/api
QUANDL_API_KEY=your_quandl_api_key_here

# FRED (Federal Reserve Economic Data) API Key
# Get your free key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# News API Key (for sentiment analysis)
# Get your free key at: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Twitter API Keys (for social sentiment)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///data/database/trading_data.db

# Database password (if using PostgreSQL/MySQL)
DATABASE_PASSWORD=your_secure_database_password

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Encryption key for sensitive data (generate a secure 32-byte key)
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# JWT secret for authentication (if implementing web interface)
JWT_SECRET=your_jwt_secret_here

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Enable multiprocessing
MULTIPROCESSING_ENABLED=true

# Number of worker processes (0 = auto-detect)
WORKER_PROCESSES=0

# Enable caching
CACHING_ENABLED=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable Numba JIT compilation
NUMBA_ENABLED=true

# ============================================================================
# DATA SOURCE SETTINGS
# ============================================================================

# Primary data source (yfinance, alpha_vantage, quandl)
PRIMARY_DATA_SOURCE=yfinance

# Fallback data source
FALLBACK_DATA_SOURCE=synthetic

# Data update intervals (in seconds)
REAL_TIME_UPDATE_INTERVAL=30
HISTORICAL_UPDATE_INTERVAL=3600

# Data retention period (in days)
DATA_RETENTION_DAYS=365

# ============================================================================
# MODEL SETTINGS
# ============================================================================

# Target model accuracy
TARGET_ACCURACY=0.90

# Model confidence threshold
CONFIDENCE_THRESHOLD=0.60

# Maximum training time (in seconds)
MAX_TRAINING_TIME=1800

# Model storage path
MODEL_STORAGE_PATH=data/models

# Enable model versioning
MODEL_VERSIONING_ENABLED=true

# ============================================================================
# GUI SETTINGS
# ============================================================================

# GUI theme (professional_dark, professional_light)
GUI_THEME=professional_dark

# Default window size (width,height)
GUI_WINDOW_SIZE=1600,1000

# Enable auto-refresh
GUI_AUTO_REFRESH=true

# Refresh interval (in seconds)
GUI_REFRESH_INTERVAL=30

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log file paths
LOG_FILE_APPLICATION=logs/application.log
LOG_FILE_TRADING=logs/trading.log
LOG_FILE_ERRORS=logs/errors.log
LOG_FILE_PERFORMANCE=logs/performance.log

# Log rotation settings
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Enable structured logging (JSON format)
STRUCTURED_LOGGING=true

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================

# Enable performance monitoring
MONITORING_ENABLED=true

# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=300

# Enable email alerts
EMAIL_ALERTS_ENABLED=false

# SMTP settings (if email alerts enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# Alert email recipients (comma-separated)
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com,trader@yourcompany.com

# ============================================================================
# BACKUP SETTINGS
# ============================================================================

# Enable automatic backups
AUTO_BACKUP_ENABLED=true

# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention period (in days)
BACKUP_RETENTION_DAYS=30

# Backup storage path
BACKUP_STORAGE_PATH=data/backups

# Enable cloud backup (AWS S3, Google Cloud, etc.)
CLOUD_BACKUP_ENABLED=false

# Cloud storage credentials (if cloud backup enabled)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-backup-bucket
AWS_REGION=us-east-1

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable development mode features
DEVELOPMENT_MODE=true

# Enable debug toolbar (for web interface)
DEBUG_TOOLBAR_ENABLED=true

# Enable hot reloading
HOT_RELOAD_ENABLED=true

# Test data size (for development/testing)
TEST_DATA_SIZE=1000

# Enable synthetic data generation
SYNTHETIC_DATA_ENABLED=true

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Production-specific settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# RATE_LIMIT_ENABLED=true
# MONITORING_ENABLED=true
# AUTO_BACKUP_ENABLED=true
# CLOUD_BACKUP_ENABLED=true

# ============================================================================
# CUSTOM SETTINGS
# ============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2
